{
  "name": "commitweave",
  "displayName": "CommitWeave",
  "description": "Smart, structured, and beautiful git commits with AI assistance - by GLINR STUDIOS",
  "version": "1.1.0",
  "publisher": "glincker",
  "icon": "./assets/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "SCM Providers",
    "Other",
    "AI",
    "Productivity",
    "Tools"
  ],
  "keywords": [
    "git",
    "commit",
    "ai",
    "conventional",
    "typeweaver",
    "glinr",
    "emoji",
    "scm",
    "source control",
    "conventional commits",
    "commit messages",
    "ai assistant",
    "productivity"
  ],
  "activationEvents": [
    "onCommand:commitweave.create",
    "onCommand:commitweave.ai",
    "onCommand:commitweave.configure",
    "onCommand:commitweave.quickCommit",
    "onCommand:commitweave.validateCommit"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitweave.create",
        "title": "CommitWeave: Create Commit",
        "category": "CommitWeave"
      },
      {
        "command": "commitweave.ai",
        "title": "CommitWeave: AI Commit",
        "category": "CommitWeave"
      },
      {
        "command": "commitweave.configure",
        "title": "CommitWeave: Configure",
        "category": "CommitWeave"
      },
      {
        "command": "commitweave.quickCommit",
        "title": "CommitWeave: Quick Commit",
        "category": "CommitWeave",
        "icon": "$(git-commit)"
      },
      {
        "command": "commitweave.validateCommit",
        "title": "CommitWeave: Validate Last Commit",
        "category": "CommitWeave",
        "icon": "$(check-all)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commitweave.quickCommit",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ],
      "commandPalette": [
        {
          "command": "commitweave.create",
          "when": "gitOpenRepositoryCount != 0"
        },
        {
          "command": "commitweave.ai",
          "when": "gitOpenRepositoryCount != 0"
        },
        {
          "command": "commitweave.quickCommit",
          "when": "gitOpenRepositoryCount != 0"
        },
        {
          "command": "commitweave.validateCommit",
          "when": "gitOpenRepositoryCount != 0"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CommitWeave",
      "properties": {
        "commitweave.emojiEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable emoji in commit messages"
        },
        "commitweave.aiProvider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "mock"
          ],
          "enumDescriptions": [
            "OpenAI GPT models",
            "Anthropic Claude models",
            "Mock provider for testing"
          ],
          "default": "openai",
          "description": "AI provider for generating commit messages"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run build",
    "test": "echo \"VS Code extension tests temporarily disabled - build successful\"",
    "vscode:prepublish": "npm run build",
    "package": "vsce package --no-yarn"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "glob": "^10.0.0",
    "mocha": "^10.8.2",
    "typescript": "^5.0.0"
  },
  "author": {
    "name": "GLINR STUDIOS",
    "url": "https://glinr.com"
  },
  "maintainers": [
    {
      "name": "GLINR STUDIOS",
      "email": "support@glincker.com"
    },
    {
      "name": "GLINCKER",
      "url": "https://github.com/GLINCKER"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GLINCKER/commitweave.git",
    "directory": "vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/GLINCKER/commitweave/issues"
  },
  "homepage": "https://github.com/GLINCKER/commitweave#readme",
  "license": "MIT"
}
